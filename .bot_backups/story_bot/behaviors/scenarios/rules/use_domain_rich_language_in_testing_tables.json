{
    "priority":  9,
    "description":  "Use domain-rich language in testing tables. Replace generic JSON with concrete, descriptive language tied to domain concepts. Real data and examples for all inputs/outputs. Example: \u0027Payment with amount -50.00 (negative)\u0027 not \u0027{\"payment\": {\"amount\": -50}}\u0027.",
    "do":  {
               "description":  "Domain-rich language with concrete examples. Example: \u0027Payment with amount -50.00 (negative amount violates rule)\u0027 not generic JSON",
               "guidance":  [
                                {
                                    "description":  "Describe actual problems in domain terms",
                                    "example":  [
                                                    "\u0027Payment with amount -50.00\u0027 (negative amount violates validation rule)",
                                                    "\u0027Credit card 4111-1111-1111-1111 expiry 01/2020\u0027 (expired card)"
                                                ]
                                },
                                {
                                    "description":  "Use real data values, not placeholders",
                                    "example":  [
                                                    "rule_name=\u0027validate_positive_amount\u0027, line_number=2, violation_message=\u0027Payment amount must be positive\u0027"
                                                ]
                                },
                                {
                                    "description":  "Show complete expected structures",
                                    "example":  [
                                                    "{\"violations\": [{\"rule_name\": \"validate_positive_amount\", \"line_number\": 2, \"severity\": \"error\"}]}"
                                                ]
                                }
                            ]
           },
    "dont":  {
                 "description":  "Don\u0027t use generic JSON or abstract descriptions. Example: \u0027{\"payment\": {\"amount\": -50}}\u0027 (generic), \u0027Payment with invalid data\u0027 (vague)",
                 "guidance":  [
                                  {
                                      "description":  "Don\u0027t use raw JSON without explanation",
                                      "example":  [
                                                      "{\"payment\": {\"amount\": -50}} (WRONG - doesn\u0027t explain what\u0027s wrong)"
                                                  ]
                                  },
                                  {
                                      "description":  "Don\u0027t use abstract descriptions",
                                      "example":  [
                                                      "\u0027Payment with invalid data\u0027 (WRONG - what makes it invalid?)",
                                                      "\u0027Violation detected\u0027 (WRONG - what violation?)"
                                                  ]
                                  },
                                  {
                                      "description":  "Don\u0027t use placeholder values",
                                      "example":  [
                                                      "\u0027{violations}\u0027 (WRONG - doesn\u0027t show actual structure)"
                                                  ]
                                  }
                              ]
             },
    "scanner":  "scanners.domain_rich_language_scanner.DomainRichLanguageScanner"
}
