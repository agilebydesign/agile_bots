{
    "name": "bot-panel",
    "displayName": "Bot Panel",
    "description": "Visual dashboard for bot status showing workflow, scope, behaviors, and instructions",
    "version": "0.1.976",
    "publisher": "agilebot",
    "repository": "https://github.com/agilebydesign/agile_bots.git",    
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [        
    ],
    "main": "./extension.js",
    "contributes": {
        "configuration": {
            "title": "Agile Bots Panel",
            "type": "object",
            "properties": {
                "agileBotsPanel.enableDebugLog": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enables Debug logging in agileBotsPanel.logFolder"
                },
                "agileBotsPanel.logFolder": {
                    "type": "string",
                    "default": "",
                    "description": "Folder where debug log will be stored. Log file name is panel-debug.log."
                }
            }
        },
        "commands": [
            {
                "command": "agilebot.viewPanel",
                "title": "View Bot Panel",
                "category": "AgileBot"
            }
        ],
        "views": {
            "agilebot-sidebar": [
                {
                    "icon": "img/company_icon.png",
                    "type": "webview",
                    "id": "agilebot.botPanelView",
                    "name": "Bot Panel"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "agilebot-sidebar",
                    "title": "AgileBot",
                    "icon": "img/company_icon.png"
                }
            ]
        }
    },
    "scripts": {
        "test": "node --test ../../test/panel/test_*.js",
        "test:watch": "node --test --watch ../../test/panel/test_*.js",
        "test:verbose": "node --test ../../test/panel/test_*.js --test-reporter=spec"
    },
    "files": [
        "**/*.js",
        "**/*.css",
        "story_graph/**",
        "img/**/*.png",
        "utils/**",
        "styles/**",
        "LICENSE"
    ],
    "devDependencies": {
        "@vscode/vsce": "^3.2.1",
        "jsdom": "^27.4.0"
    }
}
